<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/drawer_menu_image"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_padding_small"
    android:paddingLeft="@dimen/activity_padding_small"
    android:paddingStart="@dimen/activity_padding_small"
    android:paddingRight="@dimen/activity_standard_padding"
    android:paddingTop="@dimen/activity_double_standard_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView

        android:id="@+id/imageView"
        android:layout_gravity="top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/drawer_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_padding_medium"
        android:paddingStart="@dimen/activity_padding_medium"
        android:textSize="@dimen/activity_text_large"
        android:text="@string/nav_header_welcome"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/source_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_padding_xx_small"
        android:paddingLeft="@dimen/activity_padding_medium"
        android:paddingStart="@dimen/activity_padding_medium"
        android:text="@string/nav_header_source_text"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:clickable="true"/>

</LinearLayout>
